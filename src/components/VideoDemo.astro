---
interface Props {
    videoId: string;
    title: string;
    description: string;
    ctaLink: string;
    ctaText: string;
}

const { videoId, title, description, ctaLink, ctaText } = Astro.props;

interface VideoHighlight {
    text: string;
    highlight: string;
}

const highlights: VideoHighlight[] = [
    {
        highlight: "Equipamentos de ponta:",
        text: "Câmeras, lentes e microfones que usamos para garantir um visual de cinema."
    },
    {
        highlight: "Dicas práticas para seu melhor desempenho na gravação:",
        text: "O segredo para criar uma atmosfera profissional em qualquer ambiente."
    },
    {
        highlight: "O resultado final:",
        text: "A prova de que seu conteúdo merece uma produção impecável."
    }
];
---

<section class="py-16 md:py-24 bg-gray-50" id="qualidade">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-800">{title}</h2>
            <p class="text-gray-600 max-w-3xl mx-auto mt-4">{description}</p>
        </div>

        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
            <div class="w-full lg:w-2/3">
                <div class="relative w-full shadow-2xl rounded-lg overflow-hidden" style="padding-top:56.25%;">
                    <iframe 
                        class="absolute top-0 left-0 w-full h-full" 
                        src={`https://www.youtube.com/embed/${videoId}?si=Z13mjA136vgdZXof&controls=1&rel=0`}
                        title="Demonstração Nitro Produtora" 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                        referrerpolicy="strict-origin-when-cross-origin" 
                        allowfullscreen>
                    </iframe>
                </div>
            </div>

            <div class="w-full lg:w-1/3">
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-xl font-bold text-gray-800 mb-3">O Que Você Vai Ver no Vídeo:</h3>
                    <ul class="space-y-3 text-gray-600 text-sm mb-6">
                        {highlights.map((item) => (
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span><strong>{item.highlight}</strong> {item.text}</span>
                            </li>
                        ))}
                    </ul>
                    <a href={ctaLink} class="w-full text-center block bg-orange-500 hover:bg-orange-600 text-white font-bold py-2.5 px-6 rounded-lg text-base transition duration-300 transform hover:scale-105">
                        {ctaText}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>