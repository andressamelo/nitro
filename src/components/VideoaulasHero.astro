---
import { Image } from "astro:assets";
import logo from "../icons/wordmark.svg";

interface Props {
    title: string;
    description: string;
    ctaText: string;
    ctaLink: string;
}

const { title, description, ctaText, ctaLink } = Astro.props;
---

<header id="top" class="hero-background text-white">
    <div class="container mx-auto px-6 py-20 text-center">
        <div class="mb-8">
            <Image src={logo} alt="Logo da Nitro Produtora" class="mx-auto h-12" />
        </div>
        <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-4">{title}</h1>
        <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto mb-8">{description}</p>
        <a href={ctaLink} class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-full text-lg transition duration-300 transform hover:scale-105">{ctaText}</a>
    </div>
</header>

<style>
    .hero-background { 
        background-color: #581c87; 
        background-image: linear-gradient(#581c87d9,#581c87f2), url('https://images.unsplash.com/photo-1579548122080-c35fd6820ecb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'); 
        background-size: cover; 
        background-position: center; 
    }
</style>