---
import "@fontsource-variable/inter";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import VideoaulasHero from "@components/VideoaulasHero.astro";
import ProblemsSection from "@components/ProblemsSection.astro";
import ProcessSection from "@components/ProcessSection.astro";
import VideoDemo from "@components/VideoDemo.astro";
import ContactForm from "@components/ContactForm.astro";
import WhatsAppButton from "@components/WhatsAppButton.astro";
import NavigationHandler from "@components/NavigationHandler.astro";
import "../styles/index.css";

const { generator, site } = Astro;
const description = "Transforme seu conhecimento em um curso online de sucesso. Produzimos videoaulas com qualidade de cinema para educadores, especialistas e empresas.";
---

<!doctype html>
<html lang="pt-BR" class="h-full motion-safe:scroll-smooth" data-theme="dark">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
        <meta name="generator" content={generator} />

        <title>Gravação de Videoaulas Profissionais | Nitro Produtora</title>
        <meta name="description" content={description} />

        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-S1C4HWFN3X"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);} 
            gtag('js', new Date());

            gtag('config', 'G-S1C4HWFN3X');
        </script>

        <!-- initialize theme -->
        <script is:inline>
            const themeSaved = localStorage.getItem("theme");

            if (themeSaved) {
                document.documentElement.dataset.theme = themeSaved;
            } else {
                const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
                document.documentElement.dataset.theme = prefersDark ? "dark" : "light";
            }

            window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", (event) => {
                if (!localStorage.getItem("theme")) {
                    document.documentElement.dataset.theme = event.matches ? "dark" : "light";
                }
            });
        </script>
        <style>
            /* Global styles for videoaulas page */
            :root { 
                --inter-font: Inter Variable, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"; 
            }
            html { font-family: var(--inter-font); }
            body { font-family: var(--inter-font); }

            /* Force header (#page-header) to always have purple background on this page */
            #page-header { 
                background-color: #581c87 !important; 
                border-bottom-color: transparent !important; 
            }
            /* ensure text/icons remain visible */
            #page-header a, #page-header .btn, #page-header svg { 
                color: white !important; 
            }
            /* Navigation items and logo transition */
            #page-header nav,
            #page-header > a:first-child {
                transition: opacity 0.3s ease-in-out;
            }
            #page-header nav.opacity-0,
            #page-header > a.opacity-0 {
                opacity: 0;
            }
            #page-header nav.opacity-100,
            #page-header > a.opacity-100 {
                opacity: 1;
            }
            #page-header nav.pointer-events-none,
            #page-header > a.pointer-events-none {
                pointer-events: none;
            }
        </style>
    </head>
    <body class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white">
                <Header navItems={[
                    { title: 'Início', url: '#top' },
                    { title: 'Nossa Qualidade', url: '#qualidade' },
                    { title: 'Contato', url: '#contato' },
                ]} modalBgClass="bg-[#581c87] text-white" />

        <main>
            <VideoaulasHero 
                title="Transforme seu conhecimento em um curso online de sucesso."
                description="Produzimos videoaulas com qualidade de cinema para educadores, especialistas e empresas que desejam engajar e vender mais."
                ctaText="Quero um Orçamento"
                ctaLink="#contato"
            />

            <ProblemsSection />

            <ProcessSection />

            <VideoDemo 
                videoId="IopFT1OyXFs"
                title="Veja a Qualidade Nitro em Ação"
                description="Aperte o play e descubra os bastidores da criação de uma videoaula profissional que realmente encanta e engaja os alunos."
                ctaLink="#contato"
                ctaText="Grave seu curso com a Nitro!"
            />

            <ContactForm 
                title="Pronto para Lançar seu Curso Online?"
                description="Vamos conversar! Preencha o formulário e nossa equipe entrará em contato para entender seu projeto e enviar uma proposta sem compromisso."
                accessKey="38c81037-4cb7-4a3d-a25b-7333afbf9bad"
            />
        </main>

        <Footer />

        <WhatsAppButton phoneNumber="5519974121947" />
        <NavigationHandler />
    </body>
</html>