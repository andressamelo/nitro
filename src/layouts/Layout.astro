---
import whatsapp from '../assets/whatsapp.png';
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Nitro Produtora</title>
		<meta name="description" content="Produtora de vídeos especializada em conteúdo para redes sociais. Criamos roteiros estratégicos, produzimos vídeos profissionais e editamos com pós-produção completa para impulsionar sua marca.">
		<meta name="keywords" content="produtora de vídeos, vídeos para redes sociais, marketing digital, branding, edição de vídeos, produção audiovisual, vídeos institucionais, marketing de conteúdo">
		<meta name="author" content="Nitro Produtora">
		<meta property="og:title" content="Produtora de Vídeos - Potencialize Sua Marca">
		<meta property="og:description" content="Criamos vídeos estratégicos e impactantes para fortalecer sua marca online. Roteiro, produção e edição profissional.">
		<meta property="og:image" content="https://www.nitroag.com.br/assets/destaque.jpg">
		<meta property="og:url" content="https://www.nitroag.com.br">
		<meta property="og:type" content="website">
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-1F8YVQ1V2K"></script>

		<link rel="stylesheet" href="https://use.typekit.net/kbd5uqv.css">
	</head>
	<body>
		<div id="container">
			<slot />
			<a href="https://api.whatsapp.com/send?phone=5519974121947&text=Ol%C3%A1%2C%20vim%20pelo%20site%20e%20quero%20mais%20informa%C3%A7%C3%B5es!" class="btn-expand" target="_blank">
				<img src={whatsapp.src} alt="Chamar no WhatsApp"/> 
				<span class="btn-text">Chamar no Whatsapp</span>
			</a>  
		</div>
		<script src="../js/main"></script>
	</body>
</html>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Lato:ital,wght@0,100;0,300;0,400;0,700;1,100;1,300;1,400;1,700&display=swap');
	
	html,
	body {
		margin: 0;
		width: 100%;
		background: rgb(93,41,143);
		background: linear-gradient(180deg, rgba(93,41,143,1) 35%, rgba(125,60,187,1) 100%);
		color: #FFF;
		font-family: "Lato", serif;
		font-weight: 300;
		font-style: normal;
	}

	.btn-expand {
		position: fixed;
		bottom: 30px;
		right: 30px;
		overflow: hidden;
		text-decoration: none;
		display: inline-block;
		height: 50px;
		width: 50px;
		background: #57bb63;
		border-radius: 50%;
		-webkit-box-shadow: 0 3px 14px -1px rgba(0, 0, 0, .25);
		box-shadow: 0 3px 14px -1px rgba(0, 0, 0, .25);
		-webkit-transition: width .3s cubic-bezier(.51, .92, .24, 1.15), border-radius .3s ease, background .3s ease, -webkit-box-shadow .3s ease;
		transition: width .3s cubic-bezier(.51, .92, .24, 1.15), border-radius .3s ease, background .3s ease, -webkit-box-shadow .3s ease;
		transition: width .3s cubic-bezier(.51, .92, .24, 1.15), border-radius .3s ease, background .3s ease, box-shadow .3s ease;
		transition: width .3s cubic-bezier(.51, .92, .24, 1.15), border-radius .3s ease, background .3s ease, box-shadow .3s ease, -webkit-box-shadow .3s ease;
		-webkit-transition-delay: .3s, .4s, 0s;
		transition-delay: .3s, .4s, 0s;
		-webkit-animation: shake 1.8s cubic-bezier(.36, .07, .99, .97) both;
		animation: shake 1.8s cubic-bezier(.36, .07, .99, .97) both;
		-webkit-animation-iteration-count: 10;
		animation-iteration-count: 10;
		-webkit-transform: translate3d(0, 0, 0);
		transform: translate3d(0, 0, 0);
		z-index: 9
	}
	.btn-expand:hover {
		width: 220px;
		border-radius: 50px;
		background: #57bb63;
		-webkit-transition-delay: .3s, .2s, 0s;
		transition-delay: .3s, .2s, 0s;
		-webkit-box-shadow: 0 8px 20px -2px rgba(0, 0, 0, .4);
		box-shadow: 0 8px 20px -2px rgba(0, 0, 0, .4);
		-webkit-animation: none;
		animation: none
	}
	.btn-expand:hover span {
		opacity: 1;
		-webkit-transition-delay: .6s;
		transition-delay: .6s
	}
	.btn-expand:hover img {
		top: 0;
		left: 77%;
		right: 0;
		position: absolute
	}
	.btn-expand img {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		-webkit-transition: opacity .3s ease, left .3s cubic-bezier(.51, .92, .24, 1.15);
		transition: opacity .3s ease, left .3s cubic-bezier(.51, .92, .24, 1.15);
		-webkit-transition-delay: .3s;
		transition-delay: .3s;
		width: 50px
	}
	.btn-expand span {
		position: absolute;
		top: 0;
		left: 20px;
		right: 0;
		font-size: 16px;
		font-weight: 600;
		color: #fff;
		display: inline-block;
		line-height: 48px;
		opacity: 0;
		-webkit-transition: opacity .3s ease;
		transition: opacity .3s ease;
		-webkit-transition-delay: 0s;
		transition-delay: 0s
	}
	@-webkit-keyframes shake {
		10%, 90% {
			-webkit-transform: translate3d(0, -4px, 0);
			transform: translate3d(0, -4px, 0)
		}
		20%, 80% {
			-webkit-transform: translate3d(0, 1px, 0);
			transform: translate3d(0, 1px, 0)
		}
		30%, 70% {
			-webkit-transform: translate3d(0, -4px, 0);
			transform: translate3d(0, -4px, 0)
		}
		40%, 60% {
			-webkit-transform: translate3d(0, 1px, 0);
			transform: translate3d(0, 1px, 0)
		}
	}
	@keyframes shake {
		10%, 90% {
			-webkit-transform: translate3d(0, -4px, 0);
			transform: translate3d(0, -4px, 0)
		}
		20%, 80% {
			-webkit-transform: translate3d(0, 1px, 0);
			transform: translate3d(0, 1px, 0)
		}
		30%, 70% {
			-webkit-transform: translate3d(0, -4px, 0);
			transform: translate3d(0, -4px, 0)
		}
		40%, 60% {
			-webkit-transform: translate3d(0, 1px, 0);
			transform: translate3d(0, 1px, 0)
		}
	}
</style>
