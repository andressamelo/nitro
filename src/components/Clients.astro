---
import ccl from '../assets/clients/ccl.webp';
import viva from '../assets/clients/viva.webp';
import brena from '../assets/clients/brena.webp';
import progressus from '../assets/clients/progressus.webp';

---
<div class="back">
	<section class="container">
		<h2>Quem já acelerou com a gente</h2>
	</section>

	<div class="clients">
		<div class="clients-scroll">
			<img src={viva.src} alt="Viva em ação" class="v" />
			<img src={ccl.src} alt="Campinas Corte Laser" class="c" />
			<img src={brena.src} alt="Brena Cuel" class="v" />
			<img src={progressus.src} alt="Clínica Progressus" class="h" />
		</div>
	</div>
</div>

<style>
	.back {
		background-color: #F4F4F9;
		padding: 60px 0;
		margin-bottom: 30px;
		@media only screen and (min-width: 768px) {
			margin-bottom: 60px;
		}
	}
	.container {
		display: flex;
    	align-items: center;
		gap: 36px;
		justify-content: center;

		@media only screen and (min-width: 768px) {
			width: 1200px;
			margin: 0 auto;
		}
	}
	.clients {
		width: 100vw;
		background-color: #F4F4F9;
		padding: 0;
	}

	.clients-scroll {
		display: flex;
		gap: 24px;
		align-items: center;
	}

	@media only screen and (max-width: 767px) {
		.clients-scroll {
			overflow-x: auto;
			overflow-y: hidden;
			-webkit-overflow-scrolling: touch;
			scrollbar-width: none;
			white-space: nowrap;
		}

		.clients-scroll::-webkit-scrollbar {
			display: none;
		}
	}

	@media only screen and (min-width: 768px) {
		.clients-scroll {
			justify-content: center;
			overflow: visible;
		}
	}
	.clients .h {
		height: 50px;
	}
	.clients .v {
		height: 100px;
	}
	.clients .c {
		height: 45px;
	}

	h2 {
		font-family: "Bebas Neue", serif;
		font-weight: 400;
		font-style: normal;
		font-size: 26px;
		margin: 0 0 24px 0;
		display: inline;
		color: #1E1E1E;

		@media only screen and (min-width: 768px) {
			font-size: 36px;
		}
	}
</style>
